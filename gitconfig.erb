[user]
  name = <%= print("Your Name: "); STDOUT.flush; STDIN.gets.chomp %>
  email = <%= print("Your Email: "); STDOUT.flush; STDIN.gets.chomp %>
[github]
  user = <%= print("GitHub Username: "); STDOUT.flush; STDIN.gets.chomp %>
  token = <%= print("GitHub API Token: "); STDOUT.flush; STDIN.gets.chomp %>


[color]
  diff = auto
  status = auto
  branch = auto
  ui = auto
[core]
  excludesfile = <%= print("User directory: "); STDOUT.flush; STDIN.gets.chomp %>/.gitignore
  editor = mate_wait
  autocrlf = input
[apply]
  whitespace = nowarn
[format]
  pretty = %C(yellow)%h%Creset %s %C(red)(%an, %cr)%Creset
[alias]
  st = status
  ci = commit
  br = branch
  co = checkout
  df = diff
  lg = log -p
  ls = ls-files

[diff]
  tool = diffmerge
[difftool "diffmerge"]
  cmd = diffmerge.sh \"$LOCAL\" \"$REMOTE\"
[merge]
  tool = diffmerge
[mergetool "diffmerge"]
  cmd = diffmerge.sh --result="$MERGED" "$LOCAL" "$(if test -f "$BASE"; then echo "$BASE"; else echo "$LOCAL"; fi)" "$REMOTE" --title1="Mine" --title2="Merged" --title3="Theirs"

